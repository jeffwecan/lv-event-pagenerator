$team_colors: (
  {% for team_abbreviation, hex_color in team_colors.items() %}
  "{{ team_abbreviation }}": {{ hex_color }},
  {% endfor -%}
);


// TODO: these need to be populated by the settings we pull down from google drive
$category_names: {{ category_names | join(", ")}};

{% for category_name, event_category in event_categories.items() %}

.{{ category_name}}.event-card.mdl-card {
  > .mdl-card__title {
    {% if event_category.cover_image_filename %}
    background: {{ event_category.bg_color | default("white")}} url("static/{{event_category.cover_image_filename}}") center / cover;
    {% elif event_category.bg_color %}
    background: {{ event_category.bg_color }};
    {% endif %}
  }

  mark {
    {% if event_category.text_bg_color %}
    background-color: {{ event_category.text_bg_color | default("white") | hex2rgb(0.9) }};
    {% endif %}
    {% if event_category.text_fg_color %}
    color: {{ event_category.text_fg_color | default("black") | hex2rgb }};
    {% endif %}
  }
}
{% endfor -%}
